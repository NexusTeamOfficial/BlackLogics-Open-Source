<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="16dp"
	android:background="@android:color/white">
	<LinearLayout
		android:id="@+id/linear12"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/preview_image"
			android:layout_width="100dp"
			android:layout_height="150dp"
			android:src="@drawable/activity_0001"
			android:scaleType="fitCenter"
			android:focusable="false" />
		<LinearLayout
			android:id="@+id/linear13"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginStart="16dp">
			<CheckBox
				android:id="@+id/checkbox_status_bar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="StatusBar"
				android:textSize="12sp"
				android:textColor="#000000"
				android:checked="true"
				android:focusable="false" />
			<CheckBox
				android:id="@+id/checkbox_toolbar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Toolbar"
				android:textSize="12sp"
				android:textColor="#000000"
				android:checked="true"
				android:focusable="false" />
			<CheckBox
				android:id="@+id/checkbox_drawer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Drawer"
				android:textSize="12sp"
				android:textColor="#000000"
				android:focusable="false" />
			<CheckBox
				android:id="@+id/checkbox_fab"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="FAB"
				android:textSize="12sp"
				android:textColor="#000000"
				android:focusable="false" />
		</LinearLayout>
	</LinearLayout>
	<EditText
		android:id="@+id/edittext_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:padding="8dp"
		android:textSize="12sp"
		android:textColor="#000000"
		android:hint="Enter name"
		android:textColorHint="#607D8B"
		android:background="@android:drawable/editbox_background"
		android:focusable="false" />
	<TextView
		android:id="@+id/textview7"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="Type"
		android:textSize="12sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:focusable="false" />
	<RadioGroup
		android:id="@+id/radio_group_type"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		android:background="@android:drawable/editbox_background">
		<RadioButton
			android:id="@+id/radio_activity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Activity"
			android:textSize="12sp"
			android:textColor="#000000"
			android:checked="true"
			android:layout_weight="1"
			android:focusable="false" />
		<RadioButton
			android:id="@+id/radio_fragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Fragment"
			android:textSize="12sp"
			android:textColor="#000000"
			android:layout_weight="1"
			android:focusable="false" />
		<RadioButton
			android:id="@+id/radio_dialog_fragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="DialogFragment"
			android:textSize="12sp"
			android:textColor="#000000"
			android:layout_weight="1"
			android:focusable="false" />
	</RadioGroup>
	<TextView
		android:id="@+id/textview8"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="Screen orientation"
		android:textSize="12sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:focusable="false" />
	<RadioGroup
		android:id="@+id/radio_group_orientation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		android:background="@android:drawable/editbox_background">
		<RadioButton
			android:id="@+id/radio_portrait"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Portrait"
			android:textSize="12sp"
			android:textColor="#000000"
			android:layout_weight="1"
			android:focusable="false" />
		<RadioButton
			android:id="@+id/radio_landscape"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Landscape"
			android:textSize="12sp"
			android:textColor="#000000"
			android:layout_weight="1"
			android:focusable="false" />
		<RadioButton
			android:id="@+id/radio_both"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Both"
			android:textSize="12sp"
			android:textColor="#000000"
			android:checked="true"
			android:layout_weight="1"
			android:focusable="false" />
	</RadioGroup>
	<LinearLayout
		android:id="@+id/linear14"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:orientation="horizontal"
		android:gravity="end">
		<Button
			android:id="@+id/button_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cancel"
			android:textSize="12sp"
			android:textColor="#000000"
			android:background="@android:drawable/btn_default"
			android:layout_marginEnd="8dp" />
		<Button
			android:id="@+id/button_save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save"
			android:textSize="12sp"
			android:textColor="@android:color/white"
			android:backgroundTint="#1E88E5" />
	</LinearLayout>
</LinearLayout>
