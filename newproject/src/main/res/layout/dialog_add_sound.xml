<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bg_dialog_rounded"
	android:orientation="vertical"
	android:padding="16dp">
	<TextView
		android:id="@+id/dialog_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingBottom="12dp"
		android:text="Add Sound"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="@color/textColor"
		android:focusable="false" />
	<LinearLayout
		android:id="@+id/add_sound_area"
		android:layout_width="match_parent"
		android:layout_height="160dp"
		android:layout_marginBottom="16dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/imageview3"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:src="@drawable/music_48"
			android:scaleType="fitCenter"
			android:focusable="false"
			android:tint="#006A93" />
		<TextView
			android:id="@+id/textview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="Add Sound"
			android:textSize="14sp"
			android:textColor="#006A93"
			android:focusable="false" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/player_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal" />
	<LinearLayout
		android:id="@+id/linear10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:id="@+id/audio_file_name"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:text="loading.mp3"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@color/textColor" />
		<LinearLayout
			android:id="@+id/linear7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/play_pause_button"
				android:focusable="false"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:padding="12dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter"
				android:tint="#000000" />
			<LinearLayout
				android:id="@+id/linear9"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/start_time"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0:00"
					android:textSize="14sp"
					android:textColor="@color/textColor" />
				<SeekBar
					android:id="@+id/seekbar"
					android:focusable="false"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginStart="12dp"
					android:thumbTint="#4A5A75"
					android:progressTint="#B0BEC5" />
				<TextView
					android:id="@+id/end_time"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0:00"
					android:textSize="14sp"
					android:textColor="@color/textColor" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear8"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:orientation="vertical">
		<EditText
			android:id="@+id/sound_name_edittext"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:padding="12dp"
			android:textSize="12sp"
			android:textColor="#006A93"
			android:hint="Enter sound name"
			android:textColorHint="#78909C"
			android:focusable="false" />
		<CheckBox
			android:id="@+id/add_to_collection_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Add to my collection"
			android:textSize="12sp"
			android:textColor="@color/textColor"
			android:focusable="false" />
		<LinearLayout
			android:id="@+id/linear5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:orientation="horizontal"
			android:gravity="end">
			<TextView
				android:id="@+id/cancel_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Cancel"
				android:textSize="12sp"
				android:textColor="#006A93"
				android:focusable="false" />
			<TextView
				android:id="@+id/save_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Save"
				android:textSize="12sp"
				android:textColor="#006A93"
				android:focusable="false" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
