<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:padding="5dip"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:id="@+id/linear4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">
		<ImageView
			android:id="@+id/img_icon"
			android:src="@drawable/abc_96"
			android:scaleType="fitCenter"
			android:layout_width="48.0dip"
			android:layout_height="48.0dip"
			android:padding="8.0dip"
			android:focusable="false" />
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Title"
			android:textStyle="bold"
			android:textColor="@color/textColor"
			android:singleLine="true"
			android:padding="8.0dip"
			android:textSize="18.0sp"
			android:focusable="false" />
	</LinearLayout>
	<TextView
		android:id="@+id/tv_message"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Mensagem"
		android:textColor="@color/textColor"
		android:paddingLeft="8.0dip"
		android:paddingRight="8.0dip"
		android:textSize="14.0sp"
		android:focusable="false" />
	<LinearLayout
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1.0"
		android:minHeight="20.0dip">
		<LinearLayout
			android:id="@+id/widget_temanho"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:orientation="horizontal">
			<RadioGroup
				android:id="@+id/rg_width_height"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<RadioButton
					android:id="@+id/rb_matchparent"
					android:layout_width="wrap_content"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_height="24.0dip"
					android:layout_marginTop="8.0dip"
					android:layout_marginBottom="8.0dip"
					android:focusable="false" />
				<RadioButton
					android:id="@+id/rb_wrapcontent"
					android:layout_width="wrap_content"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_height="24.0dip"
					android:layout_marginTop="8.0dip"
					android:layout_marginBottom="8.0dip"
					android:focusable="false" />
				<RadioButton
					android:id="@+id/rb_directinput"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_marginTop="8.0dip"
					android:layout_marginBottom="8.0dip"
					android:focusable="false" />
			</RadioGroup>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:id="@+id/tv_matchparent"
					android:layout_width="match_parent"
					android:text="match_parent"
					android:textColor="@color/textColor"
					android:layout_height="24.0dip"
					android:layout_marginTop="8.0dip"
					android:layout_marginBottom="8.0dip"
					android:textSize="16.0sp"
					android:focusable="false" />
				<TextView
					android:id="@+id/tv_wrapcontent"
					android:layout_width="match_parent"
					android:text="wrap_content"
					android:textColor="@color/textColor"
					android:layout_height="24.0dip"
					android:layout_marginTop="8.0dip"
					android:layout_marginBottom="8.0dip"
					android:textSize="16.0sp"
					android:focusable="false" />
				<LinearLayout
					android:id="@+id/tv_directinput"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<EditText
						android:id="@+id/ed_input"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/textColor"
						android:textColorHint="#607D8B"
						android:lines="1"
						android:inputType="numberSigned"
						android:textSize="16.0sp"
						android:focusable="false"
						android:minWidth="80.0dip"
						android:maxLength="3" />
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="top"
						android:text=" dp"
						android:textColor="@color/textColor"
						android:textSize="16.0sp"
						android:focusable="false" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<EditText
			android:id="@+id/et_widget"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:textColor="@color/textColor"
			android:textColorHint="#607D8B"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:textIsSelectable="true"
			android:ems="10" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:padding="1dip">
		<Button
			android:id="@+id/btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="CANCEL"
			android:textColor="@color/textColor"
			android:paddingLeft="16.0dip"
			android:paddingTop="8.0dip"
			android:paddingRight="16.0dip"
			android:paddingBottom="8.0dip"
			android:layout_margin="8.0dip"
			android:textSize="14.0sp"
			android:theme="@style/ButtonTheme" />
		<Button
			android:id="@+id/btn_ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SAVE"
			android:textColor="@color/textColor"
			android:paddingLeft="16.0dip"
			android:paddingTop="8.0dip"
			android:paddingRight="16.0dip"
			android:paddingBottom="8.0dip"
			android:layout_margin="8.0dip"
			android:textSize="14.0sp"
			android:theme="@style/ButtonTheme" />
	</LinearLayout>
</LinearLayout>
