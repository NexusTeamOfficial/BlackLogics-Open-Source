<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Track (background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0" /> <!-- Gray for OFF state -->
            <size android:width="48dp" android:height="24dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Thumb (circle) -->
    <item android:right="28dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White thumb -->
            <size android:width="16dp" android:height="16dp" />
        </shape>
    </item>
</layer-list>