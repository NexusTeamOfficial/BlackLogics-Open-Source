<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="20dp"
		android:paddingTop="15dp"
		android:paddingBottom="5dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/imageview3"
			android:focusable="false"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginRight="10dp"
			android:src="@drawable/rename_96_blue"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/dialog_create_new_file_layoutTitle"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Create a new file"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#008DCD" />
	</LinearLayout>
	<RadioGroup
		android:id="@+id/dialog_radio_filetype"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="20dp"
		android:paddingTop="5dp"
		android:orientation="vertical">
		<RadioButton
			android:id="@+id/radio_button_folder"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Folder"
			android:textSize="12sp"
			android:textColor="@color/textColor"
			android:checked="true" />
		<RadioButton
			android:id="@+id/dialog_radio_filetype_class"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Class"
			android:textSize="12sp"
			android:textColor="@color/textColor" />
		<RadioButton
			android:id="@+id/dialog_radio_filetype_activity"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Activity"
			android:textSize="12sp"
			android:textColor="@color/textColor" />
	</RadioGroup>
	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/textinputlayout3"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:paddingLeft="20dp"
		android:paddingTop="10dp"
		android:paddingRight="20dp"
		android:paddingBottom="10dp"
		android:layout_weight="1">
		<EditText
			android:id="@+id/dialog_edittext_name"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textSize="18sp"
			android:textColor="#000000"
			android:hint="Filename"
			android:textColorHint="#008DCD"
			android:autofillHints="" />
	</com.google.android.material.textfield.TextInputLayout>
	<LinearLayout
		android:id="@+id/linear7"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dp"
		android:paddingRight="18dp"
		android:paddingBottom="10dp"
		android:background="#09A7EC"
		android:gravity="right"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/dialog_text_cancel"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="15dp"
			android:text="@string/common_word_cancel"
			android:textSize="12sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF" />
		<TextView
			android:id="@+id/dialog_text_save"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:text="@string/common_word_save"
			android:textSize="12sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF" />
	</LinearLayout>
</LinearLayout>
