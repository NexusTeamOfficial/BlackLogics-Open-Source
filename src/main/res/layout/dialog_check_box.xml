<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="16dp">
	<LinearLayout
		android:id="@+id/linear6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="8dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/img_icon"
			android:focusable="false"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:src="@drawable/widget_check_box"
			android:scaleType="center"
			android:contentDescription="CheckboxIcon" />
		<TextView
			android:id="@+id/tv_title"
			android:focusable="false"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="Set Checked State"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#000000"
			android:layout_weight="1"
			android:layout_marginStart="8dp" />
	</LinearLayout>
	<RadioGroup
		android:id="@+id/radio_group_checked"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:orientation="vertical">
		<RadioButton
			android:id="@+id/rb_checked"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="4dp"
			android:text="Checked"
			android:textSize="16sp"
			android:textColor="#000000" />
		<RadioButton
			android:id="@+id/rb_unchecked"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="4dp"
			android:text="Unchecked"
			android:textSize="16sp"
			android:textColor="#000000" />
	</RadioGroup>
	<LinearLayout
		android:id="@+id/linear7"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="8dp"
		android:orientation="horizontal"
		android:gravity="end">
		<Button
			android:id="@+id/btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Cancel"
			android:textSize="12sp"
			android:textColor="#000000"
			android:background="?android:attr/selectableItemBackground" />
		<Button
			android:id="@+id/btn_ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="OK"
			android:textSize="12sp"
			android:textColor="#000000"
			android:background="?android:attr/selectableItemBackground" />
	</LinearLayout>
</LinearLayout>
