<?xml version="1.0" encoding="UTF-8"?><resources>
    <style name="ButtonTheme">
        <item name="android:textColor">#ffffffff
		</item>
        <item name="android:colorControlHighlight">#55ffffff</item>
        <item name="android:backgroundTint">@color/normal_btn_color</item>
    </style>
    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">250dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownHeight">20dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:dropDownSelector">@android:color/white</item>
        <item name="android:activatedBackgroundIndicator">@drawable/ic_screen_rotation_grey600_24dp</item>
    </style>
    <!-- TabLayout Style -->
    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/textColorSecondary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabRippleColor">@color/tab_ripple</item>
    </style>
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Dialog.Rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
  
<style name="TabLayout.PrimarySurface" parent="Widget.MaterialComponents.TabLayout.PrimarySurface" />
    <!-- Tab Text Appearance -->
  <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
    <item name="android:textSize">14sp</item>
    <item name="textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
</style>
    <!-- Spinner Style -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/spinner_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <!-- Run Button Style -->
    <style name="RunButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="ManageImageTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/design_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/design_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3.0dip</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/design_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/DesignTabTextAppearance</item>
    </style>
    <style name="DesignTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/design_tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="TextAppearance.Design.Tab" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">@color/mtrl_tabs_legacy_text_color_selector</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Button" parent="@android:style/TextAppearance.Material.Button"/>
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="ToolbarTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tool_bar_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ThemeOverlay.ToolbarMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/design_menu_bg</item>
        <item name="android:textColor">@color/design_menu_text_color</item>
    </style>
    <style name="selectableMainItemBackground">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/color_control_normal</item>
    </style>
    <style name="AboutPageTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>
    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <!-- Adjust dim amount as needed -->
    </style>
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="pleaseDontDeleteThisFile" parent="Theme.Material3.DayNight.NoActionBar"/>
    <style name="roundedImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>
