<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#ff008dcd"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingStart="10dp"
	android:paddingTop="8dp"
	android:paddingEnd="4dp"
	android:paddingBottom="8dp">
	<ImageView
		android:id="@+id/ig_toolbar_back"
		android:focusable="false"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:padding="8dp"
		android:src="@drawable/arrow_back_white_48dp"
		android:scaleType="centerInside" />
	<TextView
		android:id="@+id/tx_toolbar_title"
		android:focusable="false"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:paddingTop="4dp"
		android:paddingBottom="6dp"
		android:background="#008DCD"
		android:text="Title"
		android:textSize="15sp"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:layout_weight="1"
		android:gravity="center|start"
		android:layout_marginStart="8dp"
		android:paddingStart="10dp"
		android:paddingEnd="8dp" />
	<ImageView
		android:id="@+id/ig_toolbar_load_file"
		android:focusable="false"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:padding="9dp"
		android:src="@drawable/add_file_48"
		android:scaleType="centerInside"
		android:visibility="gone" />
</LinearLayout>
