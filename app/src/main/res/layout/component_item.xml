<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/base"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/baseIconUi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/baseComponentIcon"
				android:focusable="false"
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:src="@drawable/default_image"
				android:scaleType="center"
				android:visibility="gone" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/baseLayout"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="5dp"
			android:orientation="vertical"
			android:layout_weight="1">
			<TextView
				android:id="@+id/baseComponentName"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Intent"
				android:textSize="14sp"
				android:textColor="@color/textColor" />
			<TextView
				android:id="@+id/baseComponentSubName"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="intent"
				android:textSize="12sp"
				android:textColor="@color/textColor" />
		</LinearLayout>
		<ImageView
			android:id="@+id/baseComponentMoreOptions"
			android:focusable="false"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:src="@drawable/icon_arrow_drop_down_sharp"
			android:scaleType="fitCenter"
			android:layout_gravity="top" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/baseOptions"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal" />
	<LinearLayout
		android:id="@+id/baseComponentDeleteUi"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:visibility="gone">
		<ImageView
			android:id="@+id/baseDeleteIcon"
			android:focusable="false"
			android:layout_width="28dp"
			android:layout_height="22dp"
			android:src="@drawable/icon_delete_twotone"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/baseDeleteText"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="4dp"
			android:text="Delete Component"
			android:textSize="12sp"
			android:textColor="#F44336" />
	</LinearLayout>
</LinearLayout>
