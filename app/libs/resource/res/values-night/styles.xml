<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Prevent this file from being deleted -->
    <style name="pleaseDontDeleteThisFile" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Base Application Theme (Light) -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Base Application Theme (Dark) -->
    <style name="AppTheme.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:buttonStyle">@style/ButtonStyle.Dark</item>
    </style>
    
    <style name="AppTheme_Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:buttonStyle">@style/ButtonStyle.Dark</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Style (Dark Theme) -->
    <style name="ButtonStyle.Dark" parent="ButtonStyle">
        <item name="backgroundTint">@color/buttonColorDark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    <!-- TextView Style -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextView Style (Dark Theme) -->
    <style name="TextViewStyle.Dark" parent="TextViewStyle">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- Status Bar Color -->
    <style name="StatusBarStyle">
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <!-- TabLayout Text Style -->
    <style name="TabLayoutTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Custom Action Bar Style -->
    <style name="CustomActionBarStyle">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:titleTextColor">@color/text_primary_dark</item>
    </style>

    <!-- Custom Dialog Style -->
    <style name="CustomDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Collapsing Toolbar Style -->
    <style name="CustomCollapsingCollapsed">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <!-- Progress Dialog -->
    <style name="progress">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Light Blue Button -->
    <style name="AppTheme.Button.LightBlue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/color_btn_ltblue_normal</item>
        <item name="rippleColor">@color/color_btn_ltblue_highlight</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Cool Green Button -->
    <style name="AppTheme.Button.CoolGreen" parent="Widget.Material3.Button">
        <item name="backgroundTint">#34BC7E</item>
        <item name="rippleColor">#1D945E</item>
    </style>

</resources>
